<% if @comment.valid? %>
$('#comments').prepend('<%= escape_javascript(render(@comment)) %>');
$('.post-comment-form').hide();
$('#comment_<%= @comment.id %>').fadeIn('slow');
<% else %>
  alert('<%= @comment.errors.full_messages.first %>');
  $('#comment_submit_button').attr('disabled', false);
<% end %>